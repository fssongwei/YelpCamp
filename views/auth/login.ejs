<%- include("../partials/header") %>
<form action="/auth/login" method="post">

<div class="container" style="margin-top: 200px;">
    <h1 style="text-align: center">Yelp Camp</h1>
    <div class="row">
      <div style="max-width:350px; width: 100%; margin: 30px auto;">
        <form action="/auth/login" method="post">
          <div class="form-group">
              <input class="form-control" type="text" name="username" placeholder="username" required="">
          </div>
          <div class="form-group">
              <input class="form-control" type="password" name="password" placeholder="password" required="">
          </div>
          <button class="btn btn-lg btn-primary btn-block">Log In</button>
        </form>
      </div>
    </div>
    <p class="text-center">Do not have an account yet? <a href="/auth/register">Sign Up here!</a></p>
  </div>
</form>

